errors = ['', null, undefined];
<span *ngIf='errors.indexOf(profileForm?.value?.dob) == -1'>
       {{profileForm?.value?.dob}}
     </span>
<span *ngIf='errors.indexOf(profileForm?.value?.dob) >= 0'>Choose birthday date</span>
	
	
